<script>
    var dsrid;
    $(document).ready(function () {

        //Getting ID Values
        dsrid = getUrlVars();

       
       
        //GettinG Date
        getDate();


        //Getting Sales Man
        getSalesman();

        //Getting Area Data
        getArea();

        //Getting Product Data
        getProduct();

        $("#areaid").change(function () {
            getCustbyArea($(this).val());
        });


        //Getting Products Data
        $("#products").change(function () {
            var proid = $("#products").val();
            $("#ProductID").val(proid);
            getProductSalrat($(this).val());
            $("#Qty").focus();
        });

        $("#Qty").blur(function () {

            var qty = $("#Qty").val();
            var salrat = $("#salrat").val();

            var amt_ = parseInt(qty) * parseInt(salrat);
            $("#Amt").val(amt_);

        });

        //Disabling Dscount Field
        $("#saleper").attr("disabled", true);

        getDsrforUpdate(dsrid);

        $("#updateDsrBtn").click(function () {

            updateItemData();

        });
    });
</script>


